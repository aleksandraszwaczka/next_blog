<%= link_to 'Back', articles_path, class: 'btn btn-dark' %>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4"><%= @article.title %></h1>
    <p class="lead"><%= @article.text %></p>
    <p><strong>Author:</strong><%= @article.user&.email %></p>
    <p><strong>Tags:</strong> <%= @article.tags.join(",") %></p>
    <span id="like_action">
      <% if @like %>
      <%= link_to like_destroy_link(@article, @like) %>
      <% else %>
        <%= link_to like_create_link(@article) %>
      <% end %>
    </span>
    (<span id="likes_count"><%= @article.likes.count %></span>)

    <% if @article.image.attached? %>
    <p>
      <%= image_tag url_for(@article.image), height: 200, width: 200 %>
    </p>
  </div>
</div>

<h3>Add comment</h3>
<%= render 'comments/form' %>

<h2>Comments</h2>
<table class='table table-hover'>
  <thead>
    <tr>
      <td>Comenter</td>
      <td>Comment</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
<%= render @article.comments %>
  </tbody>
</table>
